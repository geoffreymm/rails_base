<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
           <h3 class="panel-title">Please Sign In</h3>
        </div>
        <div class="panel-body">
					<%= form_tag admin_sessions_path do %>
					  <div class="form-group">
					    <%= text_field_tag :email, params[:email], :class => "form-control", :placeholder => "E-mail", :autofocus => true %>
					  </div>
					  <div class="form-group">
					    <%= password_field_tag :password, nil, :class => "form-control", :placeholder => "Password" %>
					   </div>
					   <%= submit_tag "Login", :class => "btn btn-lg btn-success btn-block" %>
					<% end %>
        </div>
      </div>
    </div>
  </div>
</div>

